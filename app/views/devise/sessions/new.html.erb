<div class="modal modal-sheet position-static d-block p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
  <div class="modal-dialog">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-header p-5 pb-4 border-bottom-0">
        <h1 class="fw-bold mb-0 fs-2">Log in</h1>
      </div>
      <div class="modal-body p-5 pt-0">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-floating mb-3">
            <%= f.email_field :email, class: "form-control", id: "floatingEmail", placeholder: "name@example.com", autofocus: true, autocomplete: "email" %>
            <%= f.label :email, "Email address", for: "floatingEmail" %>
          </div>
          <div class="form-floating mb-3">
            <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "current-password" %>
            <%= f.label :password, "Password", for: "floatingPassword" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
              <%= f.label :remember_me, class: "form-check-label", for: "rememberMe" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "Log in", class: "btn btn-lg rounded-3 btn btn-success mb-2" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
