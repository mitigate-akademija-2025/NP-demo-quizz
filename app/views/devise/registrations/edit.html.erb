<div class="modal modal-sheet position-static d-block p-4 py-md-5" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content rounded-4 shadow">
      
      <!-- Header -->
      <div class="modal-header p-5 pb-4 border-bottom-0">
        <h1 class="fw-bold mb-0 fs-2">Edit <%= resource_name.to_s.humanize %></h1>
      </div>

      <!-- Body -->
      <div class="modal-body p-5 pt-0">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-floating mb-3">
            <%= f.text_field :username, class: "form-control", id: "floatingUsername", placeholder: "Username", autofocus: true %>
            <%= f.label :username, for: "floatingUsername" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.email_field :email, class: "form-control", id: "floatingEmail", placeholder: "name@example.com", autocomplete: "email" %>
            <%= f.label :email, "Email address", for: "floatingEmail" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info">
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div class="form-floating mb-3">
            <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "New password", autocomplete: "new-password" %>
            <%= f.label :password, "Password (leave blank if unchanged)", for: "floatingPassword" %>
          </div>

          <% if @minimum_password_length %>
            <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
          <% end %>

          <div class="form-floating mb-3">
            <%= f.password_field :password_confirmation, class: "form-control", id: "floatingPasswordConfirm", placeholder: "Confirm new password", autocomplete: "new-password" %>
            <%= f.label :password_confirmation, "Confirm new password", for: "floatingPasswordConfirm" %>
          </div>

          <div class="form-floating mb-4">
            <%= f.password_field :current_password, class: "form-control", id: "floatingCurrentPassword", placeholder: "Current password", autocomplete: "current-password" %>
            <%= f.label :current_password, "Current password (required to save changes)", for: "floatingCurrentPassword" %>
          </div>

          <!-- Submit button -->
          <div class="d-grid mb-3">
            <%= f.submit "Update", class: "btn btn-lg rounded-3 btn-success" %>
          </div>
        <% end %>

        <!-- Cancel account section -->
        <hr class="my-4">
        <h5>Cancel my account</h5>
        <p class="text-muted">Unhappy? This action cannot be undone.</p>
        <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, class: "btn btn-outline-danger mb-3", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" } %>

        <!-- Back link -->
        <%= link_to "Back", root_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
