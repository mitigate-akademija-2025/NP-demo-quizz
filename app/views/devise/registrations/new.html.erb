<div class="modal modal-sheet position-static d-block p-4 py-md-5" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content rounded-4 shadow">

      <!-- Header -->
      <div class="modal-header p-5 pb-4 border-bottom-0">
        <h1 class="fw-bold mb-0 fs-2">Sign up</h1>
      </div>

      <!-- Body -->
      <div class="modal-body p-5 pt-0">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-floating mb-3">
            <%= f.text_field :username, class: "form-control", id: "floatingUsername", placeholder: "Username", autofocus: true %>
            <%= f.label :username, for: "floatingUsername" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.email_field :email, class: "form-control", id: "floatingEmail", placeholder: "name@example.com", autocomplete: "email" %>
            <%= f.label :email, "Email address", for: "floatingEmail" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "Password", autocomplete: "new-password" %>
            <%= f.label :password, for: "floatingPassword" %>
          </div>

          <% if @minimum_password_length %>
            <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
          <% end %>

          <div class="form-floating mb-4">
            <%= f.password_field :password_confirmation, class: "form-control", id: "floatingPasswordConfirm", placeholder: "Confirm password", autocomplete: "new-password" %>
            <%= f.label :password_confirmation, "Confirm password", for: "floatingPasswordConfirm" %>
          </div>

          <div class="d-grid mb-3">
            <%= f.submit "Sign up", class: "btn btn-lg rounded-3 btn-success" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
