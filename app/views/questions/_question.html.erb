<%= fields_for [@question.quiz, @question] do |ff| %>
  <fieldset id="<%= dom_id(question) %>">
    <legend>Question info</legend>
    <%= ff.text_field :name %><br>
    <%= ff.text_field :content %>
    <%= ff.hidden_field :id %>
    <%= button_tag "Remove question", formaction: question_path(dom_id(question)), formmethod: :delete %>
  </fieldset>
<% end %>