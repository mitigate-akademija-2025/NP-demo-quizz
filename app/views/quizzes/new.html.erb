<% content_for :title, "New quiz" %>

<%= form_with(model: @quiz, local: true) do |f| %>
  <div class="card mb-4 rounded-3 shadow-sm border-primary">
    <!-- Card header -->
    <div class="card-header py-3 text-bg-primary border-primary">
      <div class="d-flex justify-content-between align-items-center">
        <!-- Left side -->
        <h3 class="my-0 fw-normal">New Questionare</h3>

        <!-- Right side buttons (optional for New) -->
        <div class="btn-group">
            <%= f.submit "Save", class: "btn btn-outline-light" %>
            <%= link_to "Home", quizzes_path, class: "btn btn-outline-warning" %>
          </div>
      </div>
    </div>

    <!-- Card body -->
    <div class="card-body">
      <%= render "form", quiz: @quiz %>
    </div>
  </div>
<% end %>