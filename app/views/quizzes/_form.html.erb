<%= form_with(model: quiz, local: true) do |f| %>
  <div style="margin-left: 20px; border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
  </div>

  <div style="margin-left: 20px; border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </div>

  <h3>Questions</h3>
  <%= f.fields_for :questions do |qf| %>
    <% question_index = qf.index + 1 %>
    <div style="margin-left: 20px; border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
      <strong>Question <%= question_index %>:</strong>
      <%= qf.text_field :name %>
    </div>
  <% end %>

  <%= f.submit %>
<% end %>
